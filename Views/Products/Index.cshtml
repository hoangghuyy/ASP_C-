@model IEnumerable<Web_Asm2.Models.Product>

@{
    ViewData["Title"] = "Index";
    
}

<main class='app-content'>
    <div class='app-title'>
        <div>
            <h1><i class='fa fa-th-list'></i> Data Product</h1>
            <p>Product to display analytical data effectively</p>
        </div>
        <ul class='app-breadcrumb breadcrumb side'>
            <li class='breadcrumb-item'><i class='fa fa-home fa-lg'></i></li>
            <li class='breadcrumb-item'>Products</li>
            <li class='breadcrumb-item active'><a href='#'>Data Product</a></li>
        </ul>
    </div>
    <div class='row'>
        <div class='col-md-12'>
            <div class='tile'>
                <div class='tile-body'>
                    <p>
                        <a asp-action="Create" class="btn btn-primary">Create New</a>
                    </p>
                    <div class='scroll'>
                        <table class='table table-hover table-bordered'>
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                                    <th>@Html.DisplayNameFor(model => model.Author)</th>
                                    <th> @Html.DisplayNameFor(model => model.Description)</th>
                                    <th> @Html.DisplayNameFor(model => model.Price)</th>
                                    <th>@Html.DisplayNameFor(model => model.ImagePath)</th>
                                    <th>@Html.DisplayNameFor(model => model.Category)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Author)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            <img style="width:100px; height:auto;" src="@Url.Content(item.ImagePath)" alt="Course Image" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>






